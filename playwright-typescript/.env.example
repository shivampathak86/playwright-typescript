# Shivam Playwright-Typescript - Environment Configuration

# Application URL
BASE_URL=http://localhost:3000

# Element interaction timeout (milliseconds)
TIMEOUT=30000

# Run browser in headless mode (true/false)
HEADLESS=true

# Run browser in incognito/private mode (true/false)
INCOGNITO=false

# Test environment (dev/staging/production)
ENVIRONMENT=dev

# Enable logging (true/false)
ENABLE_LOGGING=true

# Remote browser URL (for cloud execution)
REMOTE_URL=

# Build name for reporting
BUILD_NAME=Local Build

# Application name under test
APP_NAME=AUT
